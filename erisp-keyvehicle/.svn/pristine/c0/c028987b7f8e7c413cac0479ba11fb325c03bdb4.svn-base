<!-- 车辆历史轨迹信息Mapper -->
<mapper namespace="com.gkhb.keyvehicle.mapper.VehicleHisTrajectoryInfoMapper">
	<!-- 根据车牌查询 -->
	<select id="searchVehicleHisTrajectoryInfo" parameterType="java.lang.String" resultType='com.gkhb.keyvehicle.model.VehicleHisTrajectoryInfo'>
		SELECT A.PLATE_NUMBER,A.LATITUDE,A.LONGITUDE,A.REPORT_TIME,A.SPEED FROM KV_REAL_TIME_DATA A
		WHERE ID IS NOT NULL
		<if test=" plateNumber != null and plateNumber != '' ">
			AND A.PLATE_NUMBER LIKE CONCAT(CONCAT('%', #{plateNumber}),'%')
		</if>
		ORDER BY A.REPORT_TIME DESC
	</select>
	
