<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 实时GPS位置Mapper -->
<mapper namespace="com.gkhb.keyvehicle.mapper.RealTimeDataMapper">

	<!-- 添加实时GPS位置 -->
	<insert id="addRealTimeData" parameterType="com.gkhb.keyvehicle.model.RealTimeData">
		INSERT INTO
		KV_REAL_TIME_DATA (
		ID,
		SYSTEM_NUMBER,
		PLATE_NUMBER,
		WARN_FLAG,
		STATE,
		LATITUDE,
		LONGITUDE,
		ALTITUDE,
		SPEED,
		COURSE,
		REPORT_TIME,
		RECEIVE_TIME,
		ETL_STATE
		)
		VALUES
		(
		#{id},
		#{systemNumber},
		#{plateNumber},
		#{warnFlag},
		#{state},
		#{latitude},
		#{longitude},
		#{altitude},
		#{speed},
		#{course},
		#{reportTime},
		#{receiveTime},
		#{etlState}
		);
	</insert>

	<!-- 查询所有 -->
	<select id="queryRealTimeData" resultType='com.gkhb.keyvehicle.model.RealTimeData'>
		select * from
		KV_REAL_TIME_DATA
	</select>

	<!-- 查询某段时间内某辆车的位置信息MYSQL -->
